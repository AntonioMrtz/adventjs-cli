{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ts-node",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/index.ts",
      "runtimeArgs": [
        "--loader",
        "ts-node/esm"
      ],
      "env": {
        "NODE_OPTIONS": "--loader ts-node/esm"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}"
    }
  ]
}